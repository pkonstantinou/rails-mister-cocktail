<div class="banner"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo.key if @cocktail.photo.attached? %>);">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-sm-6 mb-5 p-4">
      <h5 class="text-center">Ingredient list</h5>
      <table class="table table-bordered mt-4">
        <thead>
            <th>Ingredient</th>
            <th>Dose</th>
            <th></th>
          </thead>
        <tbody>
        <% @cocktail.doses.each do |dose| %>
          <tr>
            <td><%= dose.ingredient.name %></td>
            <td><%= dose.description %></td>
            <td class="text-center p-2 align-middle">
            <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="fa fa-trash delete-icon"></i>
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-6 mb-5 p-4">
    <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>
